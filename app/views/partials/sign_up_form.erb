<fieldset>
  <legend>Login Details</legend>
<div>
  <label for="name" class="title">Username:</label>
  <input name="name" type="text" title="Username" required autofocus>
</div>

<div>
  <label for="email" class="title">Email:</label>
  <input name="email" type="email" title="email" required autofocus>
</div>

<div>
  <label for="password" class="title">Password:</label>
  <input id="pswdInput" name="password" title="password" type="password" required>
  <input type="button" onclick="showPswd()" value="Show/Hide">
</div>

<div class="submit">
  <input name="login" type="submit" value="Sign up">
</div>
</fieldset>
